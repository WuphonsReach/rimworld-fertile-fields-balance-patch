<!--
Original math for this is "1" sand to "1" clay for workAmount 200.

- Increase input/output by 5x making this a "make 5" and "make 25" (bulk)
- Lower base recipe work amount by 33%
- Give a 20% reduction on work amount for bulk.

-->
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClay"]/workAmount</xpath>
        <value>
            <workAmount>150</workAmount>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClay"]/ingredients/li[filter/thingDefs[li="SandPile"]]/count</xpath>
        <value>
            <count>5</count>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClay"]/products/RFFClay</xpath>
        <value>
            <RFFClay>5</RFFClay>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClay"]/description</xpath>
        <value>
            <description>Grind 5 sand into finer particles to create 5 clay.</description>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClayBulk"]/workAmount</xpath>
        <value>
            <workAmount>480</workAmount>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClayBulk"]/ingredients/li[filter/thingDefs[li="SandPile"]]/count</xpath>
        <value>
            <count>25</count>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClayBulk"]/products/RFFClay</xpath>
        <value>
            <RFFClay>25</RFFClay>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName = "MakeClayBulk"]/description</xpath>
        <value>
            <description>Grind 25 sand into finer particles to create 25 clay.</description>
        </value>
    </Operation>

</Patch>
